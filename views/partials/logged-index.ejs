<main>
  <div class="create-post-container">
    <button class="create-post-button hidden">
      + CREATE A NEW POST
    </button>

    <form action="/create-post" method="post" class="">
      <button type="button" class="close" aria-label="Cancel post creation">x</button> 
      
      <label for="post-title">Title</label>
      <input id="post-title" type="text" name="title" maxlength="50" />

      <textarea 
        id="post-content" 
        name="text" 
        maxlength="280" 
        rows="7"
        placeholder="Write your message here..."
        required
      ></textarea>
      
      <div class="submit-container">
        <button type="submit">Post</button>
      </div>
    </form>

  </div>
  <div class="post-container">
    <% messages.forEach((message) => { %>
      <div class="grid-cell">
        <article class="post
          <% if (message.user_id === user.id) { %>
            by-user
          <% } %>
        ">
          <div class="heading">
            <h5 class="title"><%= message.title %></h5>
          </div>
          <p class="content"><%= message.text %></p>
          <p class="username">Anonymous</p>
        </article>
      </div>
    <% }) %>
  </div>
</main>