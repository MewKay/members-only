<!DOCTYPE html>
<html lang="en">
  <head> 
    <%- include("partials/head.ejs", { title }) %>
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/index.css">
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <% if (locals.user && !locals.user.membership_status) { %>
      <%- include("partials/logged-index.ejs", { messages }) %>
    <% } else if (locals.user && locals.user.membership_status) { %>
      <%- include("partials/member-index.ejs", { messages }) %>
    <% } else { %>
      <%- include("partials/unauth-index.ejs", { messages }) %>
    <% } %>

    <script src="/scripts/header.js"></script>
    <script src="/scripts/index.js"></script>
  </body>
</html>
